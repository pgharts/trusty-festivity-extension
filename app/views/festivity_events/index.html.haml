-# ==partial "partials/filter-bar-mobile"

.container
  .row
    .event-filter-bar.col-md-3.hidden-xs.hidden-sm
      -# == partial 'partials/events_filters'
    #myNavmenu.event-filter-bar.hidden-lg.navmenu.navmenu-default.navmenu-fixed-left.offcanvas
      -# == partial 'partials/events_filters'
    .event-list.col-xs-12.col-md-9
      .row
        .col-xs-8
        .sort.col-xs-4
          %form.form-horizontal.row
            .form-group
              %label.col-xs-3.control-label{for: "sort"}
                Sort
              .col-xs-9
                %select.form-control#sort
                  %option
                    Date/Time
                  %option
                    Alphabetical
                  %option
                    Featured
      .row
      - @events.each do |event|
        .row.event-list-item{data:{genre: event.genre.first, date: event.start_date} }
          data-genre=e.data_genre data-date=e.data_date data-location=e.data_location class=e.slug
          hr
          .event-list-item__photo.col-xs-12.col-sm-4
            .photo
              =link_to "#{e.slug}.html"
                img.img-responsive(src="#{e.image_url}")

              .event_list-item__photo-featured-item Featured Event!
          .event-list-item__info.col-xs-12.col-sm-8
            =link_to "#{e.slug}.html"
              h2= e.event_title
            h3
              span.strong= e.event_name
              span.light= e.event_sponsor
            hr
            p
              =link_to "venues/#{e.event_venue_slug}.html"
                = "#{e.event_venue}"
              |&nbsp;@&nbsp;
              =link_to "locations/#{e.event_location_slug}.html"
                = "#{e.event_location}"
            - if e.event_dates_and_times.count > 1
              p
                | Multiple dates and times&nbsp;
                button.btn.btn-sm.btn-default.btn-popover Show all
            - else
              - e.event_dates_and_times.each do |date,index|
                p= "#{date.date}, #{date.time}"
            hr
            p
              .event-list-item__info_short_description
                - for c in e.event_categories do
                  a.strong(href='#')= c
                  | :&nbsp;
                  span= e.event_short_description
            .event-list-item__button-group
              =link_to  "Details", "#{e.slug}.html", class: 'btn event-list-item__btn'
              =link_to  "Tickets", "#{e.tickets_link}", class: 'btn event-list-item__btn', target: '_blank'
              =link_to  "Share", "#", class: 'btn event-list-item__btn'
              =link_to  "Directions", "#{e.map_link}", class: 'btn event-list-item__btn', target: '_blank'